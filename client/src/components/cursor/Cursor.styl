.Cursor
    width 100%
    height 100%

    &-cursor
        position absolute
        left 0
        top 0
        transform-origin top left
        touch-action none
        pointer-events none

    &--image
        filter url('#outline') invert()
        mix-blend-mode difference

    // e.g. if I wanted to make the outline more visible on dark backgrounds
