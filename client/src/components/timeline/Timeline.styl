.Timeline
    frame-size = 3rem
    inactive-color = grey(80)

    padding rhythm--half

    &-layer
        display block
    
    &-layer-frame
        color theme.panel;
        display inline-block
        background inactive-color;
        border-radius 0.4rem
        width frame-size
        height frame-size

        & + &
            margin-left rhythm--half

        &--button
            color grey(60)
            background-color transparent
            border 0.1rem solid inactive-color;

        &--active
            color theme.panel;
            background theme.active;
   