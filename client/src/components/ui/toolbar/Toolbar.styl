.Toolbar
    position absolute
    left rhythm--half
    top rhythm--half
    display flex
    flex-direction column
    z-index 1

    &-tool
        font-size 1.6rem
        border-bottom-width 0
        width auto

        & + &
            border-top-width 0

        &--solid
            background green
            border-top-left-radius 0.4rem
            border-top-right-radius 0.4rem

            & + &
                border-radius 0

            &:last-of-type
                border-bottom-left-radius 0.4rem
                border-bottom-right-radius 0.4rem

    &-panel
        margin-bottom rhythm--half