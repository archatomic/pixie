.Onion
    position relative
    width 100%
    height 100%

    &-frame
        position absolute
        left 0
        top 0
        right 0
        bottom 0
        width 100%
        height 100%

    &-before
        filter url('#cyan-skin')

    &-after
        filter url('#red-skin')

    &--solid &-before
        filter url('#alprha-mask') url('#cyan-skin')

    &--solid &-after
        filter url('#alpha-mask') url('#red-skin')