.Workspace
    display flex
    position relative
    align-items center
    justify-content center
    height 100%
    width 100%
    overflow hidden
    touch-action none

    .Theme--light &
        background-color grey(20)

    &-stage
        position absolute

    &-wrapper
        position relative
        image-rendering pixelated
        background-color grey
        outline 1px solid grey(98)
        cursor none

    &-wrapper:before
        content ''
        display block
        position absolute
        left 0
        top 0
        right 0
        bottom 0
        background-image url(checker)
        background-size 32px 32px
        mix-blend-mode multiply
        opacity 0.25

    &-wrapper:after
        content ''
        display block
        position absolute
        left 0
        top 0
        right 0
        bottom 0
        z-index 2
    
    &-cel
        pointer-events none
        position absolute
        left 0
        top 0
        z-index 1
    
    &-cursor
        z-index 1
        display block
        position absolute
        left 0
        top 0
        width 1px
        height 1px
        background black
