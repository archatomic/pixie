.Image
    --width auto
    --height auto
    --ar 0
    --checker 1rem

    position relative
    display block    
    height auto
    padding-bottom var(--ar) // Ensure we can set width and height adjusts
    overflow hidden
    image-rendering pixelated

    &--checker
        background white

    &--checker:before, &-canvas
        content ''
        display block
        position absolute
        left 50%
        top 50%
        width var(--width)
        height var(--width)
        width 100%
        height 100%
        transform translate(-50%, -50%)
    
    &--checker:before
        background url(checker)
        background-size var(--checker)
        opacity 0.2