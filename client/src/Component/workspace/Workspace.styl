.Workspace
    display flex
    position relative
    align-items center
    justify-content center
    height 100%
    width 100%
    overflow hidden
    touch-action none

    &-stage
        position absolute
        image-rendering pixelated
        outline 0.1rem solid subtle-border;
        background-color #ccc
        overflow hidden

    &-backdrop
        display block
        right 0
        bottom 0
        background-image url(checker)
        background-size 3.2rem 3.2rem
        mix-blend-mode multiply
        opacity 0.15

    &-cel, &-cursor, &-backdrop
        transform-origin top left
        position absolute
        left 0
        top 0

    &-cel
        touch-action none
        pointer-events none
