.TopBar
    display flex
    padding rhythm--quarter

    &-spacer
        flex-grow 1

    &-control
        interactive()
        padding rhythm--half
        border-radius 0.3rem

    &-menu
        margin-left rhythm--quarter

    &-right
        display flex
        align-items center

    &-tabs
        display flex
        flex-shrink 1
        overflow auto

    &-tab
        position relative
        color grey(70)
        display flex
        align-items center
        border-radius 0.3rem

        & + &
            border-left 1px solid grey(87)

        & + &:has(&-label--active),
        &:has(&-label--active) + &
            border-color transparent

    &-tab:has(&-tab-label--active),
    &-home--active &-control,
    &-control--active
        background theme.panel
        color theme.black

    &-tab-label
        padding rhythm--half rhythm--half rhythm--half rhythm
        line-height 1
        max-width 13rem
        white-space nowrap
        overflow hidden
        text-overflow ellipsis

    &-close-tab
        font-size fs--small
        color grey(70)
        cursor pointer

        &:hover
            color grey(30)

        &:active
            color grey(0)
            transition none

