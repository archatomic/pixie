.TopBar
    display flex

    &-spacer
        flex-grow 1

    &-control
        padding rhythm--half

    &-right
        display flex
        align-items center

    &-tabs
        display flex
        flex-shrink 1
        overflow auto

        &:has(.TopBar-tab)
            border-left 1px solid grey(87)
            border-right 1px solid grey(87)

    &-tab
        position relative
        padding-left rhythm
        color grey(70)
        display flex
        align-items center

        &--home
            padding 0

        & + &
            border-left 1px solid grey(87)

        & + &:has(&-label--active),
        &:has(&-label--active) + &
            border-color transparent

    &-tab:has(&-tab-label--active),
    &-home--active
        background grey(95)
        color theme.black

    &-close-tab
        font-size fs--small
        margin-left rhythm--half
        color grey(70)
        cursor pointer

        &:hover
            color grey(30)

        &:active
            color grey(0)
            transition none

