// NOTE: this is a fake window manager window title for the os.
// This is why the measurements are in exact px instead of rem.
// It would be strange to scale up the ui on the window title
// along with the rest of the content
.TitleBar
    display flex
    flex-grow 0
    flex-shrink 0
    align-items center
    -webkit-app-region drag
    -webkit-user-select none
    width 100%
    position relative
    background theme.panel;

    &-button
        cursor pointer

    &-ui
        flex-grow 1
        font-size 14px
        font-weight 400
        color grey(70)

        .App--focused &
            color theme.black

    .App--mac &
        &-buttons
            padding-left 6px
            padding-right rhythm--half
            height 100%
            display flex
            align-items center

        &-button
            position relative
            width 12px
            height 12px
            border-radius 12px
            margin-left 7px
            background grey(80)
            overflow hidden

            &:before, &:after
                opacity: 0

        &-buttons:hover .TitleBar-button
            &:before, &:after
                opacity 1

    .App--mac.App--focused &-button
        &--close
            background #f7545c

            &::before,
            &::after
                position absolute
                left 50%
                top 50%
                transform: translate(-50%, -50%) rotate(45deg)
                content ''
                display block
                height 2px
                width 8px
                border-radius 2px
                background #9c1f25

            &::after
                transform: translate(-50%, -50%) rotate(-45deg)

        &--minimize
            background #e0ca24

            &::after
                position absolute
                left 50%
                top 50%
                transform: translate(-50%, -50%)
                content ''
                display block
                height 2px
                width 8px
                border-radius 2px
                background #907900

        &--maximize
            background #79d962

            &::before
                position absolute
                left 50%
                top 50%
                transform: translate(-50%, -50%)
                content ''
                display block
                height 6px
                width 6px
                border-radius 1px
                background #106587

            &::after
                position absolute
                left 50%
                top 50%
                transform: translate(-50%, -50%) rotate(45deg)
                content ''
                display block
                height 12px
                width 2px
                background #79d962

    .App--windows &,
    .App--linux &
        flex-direction row-reverse

        &-buttons
            display flex
            align-items center

        &-button
            width 24px
            height 24px
            margin-right rhythm--half
            position relative
            transition color 0.2s ease-in-out
            color grey(60)
            border 4px solid transparent

            &:hover
                color grey(20)

            &:active
                color grey(0)
                transition none

            &--maximize::before
                content ''
                display block
                position absolute
                left 0
                top 0
                right 0
                bottom 0
                border 2px solid currentColor

            &--minimize::before
                content ''
                display block
                position absolute
                left 0
                top 50%
                right 0
                transform translateY(-1px)
                height 2px
                background currentColor


            &--close::before,
            &--close::after
                content ''
                display block
                position absolute
                left -2px
                top 50%
                right -2px
                height 2px
                transform translateY(-50%) rotate(45deg)
                background currentColor

            &--close::after
                transform translateY(-50%) rotate(-45deg)
