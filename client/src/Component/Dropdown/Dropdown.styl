.Dropdown
    &-toggle
        display flex
        align-items center

    &-item
        white-space nowrap
        display flex
        align-items center
        padding rhythm--quarter
        border-radius  0.3rem
        user-select none
        font-size fs--small

    &-divider
        border-top 0.1rem solid grey(85)
        margin rhythm--quarter 0

    &-icon
        margin-left rhythm

    &-spacer
        flex-grow 1

    &-content
        overflow hidden
        background grey(93)
        transform translate(- rhythm--half, 0)
        transition transform 0.2s ease-in-out
        padding rhythm--quarter

        .Popover--show &
            transform translate(- rhythm--half, rhythm--half)

        .Theme--light &
            background grey(98)

    &-toggle, &-item--clickable
        color grey(50)
        cursor pointer

        &:hover, &:focus
            color grey(30)

        &:active
            transition color none
            color grey(0)

    &-item--disabled
        color grey(80)

    &-item--clickable:hover
        background grey(95)

    &-content--mobile
        font-size fs--large
        width 'calc(100vw - %s)' % rhythm
        transform translateY(100%)
        padding rhythm--half

        .Popover--show &
            transform translateY(- rhythm--half)

    &-content--mobile &
        &-item
            padding rhythm

        &-icon
            margin-left rhythm
